          "<% } %>"
     
    // Rediriger après un délai
    if (message == "Utilisateur ajouté avec succès !") {
        console.log(message)
        setTimeout(function() {
      window.location.href = '/connexion'; // Redirige vers l'URL spécifiée
    }, 3000); // 3000 ms = 3 secondes
         }else{
            setTimeout(function() {
      window.location.href = '/'; // Redirige vers l'URL spécifiée
    }, 3000); // 3000 ms = 3 secondes
         }
    
  </script>
</html>